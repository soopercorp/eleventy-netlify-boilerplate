<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ renderData.title or title or metadata.title }}</title>
  <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
  <meta name="description" content="{{ metaDescription or renderData.metaDescription or metadata.description }}">
  <script type="module" src="https://unpkg.com/dark-mode-toggle"></script>
  {% set css %}
    {% include "assets/css/inline.css" %}
  {% endset %}
  <style>{{ css | cssmin | safe }}</style>
<!-- capture the JS content as a Nunjucks variable -->
{% set js %}
  {% include "assets/js/inline.js" %}
{% endset %}
<!-- feed it through our jsmin filter to minify -->
<script>
  {{ js | jsmin | safe }}
</script>
</head>
